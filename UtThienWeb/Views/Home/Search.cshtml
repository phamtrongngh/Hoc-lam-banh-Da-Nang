@model IEnumerable<UtThienWeb.Models.Search>
@using UtThienWeb.Controllers;
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-12" style="border-bottom:1px solid white"><h2 style="color:white">Kết quả tìm kiếm</h2></div>
    </div>

</div>
<div class="container">
    <div class="row" style="margin-top:50px">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <a href="/@HomeController.RemoveUnicode(item.SearchName)">
                    <div class="img-search" style="width:100%;height:200px;">
                        <img src="~/img/@item.SearchImage" width="100%" height="100%" alt="Alternate Text" />
                    </div>
                    <h3 style="text-align:center;">@item.SearchName</h3>
                </a>
            </div>
        }

    </div>
</div>