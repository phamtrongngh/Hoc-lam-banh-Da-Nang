@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model IEnumerable<UtThienWeb.Models.News>
<!-- Header section end  -->
<div class="container" style="margin-top:100px;">
    <ul class="breadcrumb corlor_white">
        <li><a href="../" style="color:white">Trang Chủ</a></li>
        <li><a href="#" style="color:white">Tuyển dụng</a></li>

    </ul>
</div>
<form class="modal fade" id="modaltuyendung" method="post" action="/Tuyendung/SendForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
      aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Hồ sơ ứng tuyển</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input type="text" hidden name="title" class="title-recrui" value="" />
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" for="orangeForm-name"><i class="fas fa-user prefix grey-text"></i> Họ và tên </label>
                    <input name="name" type="text" id="#" class="form-control validate">
                </div>
                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" for="orangeForm-email"><i class="fas fa-envelope prefix grey-text"></i> Email</label>
                    <input name="email" type="email" id="orangeForm-email" class="form-control validate">
                </div>

                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="orangeForm-pass"><i class="fa fa-phone-volume"></i> Số điện thoại</label>
                    <input name="phone" type="text" id="orangeForm-pass" class="form-control validate">

                </div>
                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="orangeForm-pass"><i class="fas fa-file"></i> Kinh nghiệm làm việc</label>
                    <textarea name="exp" class="form-control validate"></textarea>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-danger send-button-recruiment" name="submit" style="width:20%">Gửi</button>
            </div>
        </div>
    </div>
</form>
<div class="container body-baiviet">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-5 block-td">
                <div class="name-job">
                    <h4 class="title"><a href="#"><p class="job-vt"></p>@item.NewsTitle</a></h4>
                </div>
                <div class="postby">
                    <div class="pull-left">
                        <i class="fa fa-user" aria-hidden="true"></i> ÚT THIỆN
                    </div>
                    <div class="pull-left">
                        <i class="fa fa-calendar" aria-hidden="true"></i> @item.NewsDate
                    </div>
                </div>
                <div class="content-td">
                    <div class="job-detail">
                        @Html.Raw(item.NewsContent)
                    </div>
                </div>
                <div class="btn-td">
                    <button id=@item.NewsId name="@item.NewsTitle" type="submit" class="btn btn-danger register-enroll" data-toggle="modal" data-target="#modaltuyendung">ĐĂNG KÝ ỨNG TUYỂN</button>
                </div>
            </div>

        }
    </div>
</div>
<!--Footer-->
<script>
    $(document).ready(function () {
        $("form").on('submit', function (e) {
            alert("Đơn ứng tuyển đã được gửi, xin chờ chúng tôi liên hệ!");
        });
        $(".register-enroll").click(function () {
            $(".send-button-recruiment").val($(this).attr("id"));
            $(".title-recrui").val($(this).attr("name"));
        })
    })
</script>