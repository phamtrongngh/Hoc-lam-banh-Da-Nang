@model IEnumerable<UtThienWeb.Areas.Admin.Models.Form>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Đơn xin việc</h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Họ Tên
                                    </th>
                                    <th>
                                        Số Điện Thoại
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Vị Trí Ứng Tuyển
                                    </th>
                                    <th>
                                        Vào Lúc
                                    </th>
                                    <th>
                                        Tình Trạng
                                    </th>
                                    <th>Xác Nhận Đơn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.FormName
                                    </td>
                                    <td>
                                        @item.FormPhone
                                    </td>
                                    <td>
                                        @item.FormEmail
                                    </td>
                                    <td>
                                        @item.NewsTitle
                                    </td>
                                    <td>
                                        @item.FormCreationDate
                                    </td>
                                    <td>
                                        @if (item.FormStatus == "succcess")
                                        {<p style="color:limegreen">Đơn thành công</p>}
                                        @if (item.FormStatus == "failed")
                                        {<p style="color:red">Đơn đã hủy</p>}
                                        @if (item.FormStatus == "Đang chờ liên lạc")
                                        {<p>Đang chờ liên lạc</p>}
                                    </td>
                                    <td>
                                        <form action="/Admin/Forms/Apply" method="post">
                                            <input hidden type="number" name="id" value="@item.FormId" />
                                            <button name="apply" value="success" style="font-size:12px;padding:4px 4px !important;" onclick="" class="btn btn-primary">Thành công</button>
                                            <button name="apply" value="failed" style="font-size:12px;padding:4px 15px !important" class="btn btn-primary">Hủy đơn</button>
                                        </form>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


